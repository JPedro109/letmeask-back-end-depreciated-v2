{
  "name": "api-letmeask",
  "version": "1.0.0",
  "description": "Aplicação voltada para interação de usuários por meio de salas de perguntas e respostas",
  "main": "dist/server.js",
  "repository": "https://github.com/JPedro109/letmeask-back-end.git",
  "author": "João Pedro <joaopedromoraesnsilva@gmail.com>",
  "license": "MIT",
  "scripts": {
    "postinstall": "husky install",
    "migrate:generate": "prisma migrate dev && prisma generate",
    "migrate:execute": "prisma generate && prisma migrate deploy",
    "dev": "yarn migrate:execute && ts-node-dev -r tsconfig-paths/register --files src/server.ts",
    "build": "rimraf dist && tsc -p tsconfig-build.json && tsc-alias -p tsconfig-build.json",
    "start": "yarn migrate:execute && yarn build && node dist/server.js",
    "test": "jest --passWithNoTests --detectOpenHandles --silent",
    "test:coverage": "yarn test --coverage",
    "test:staged": "yarn test --findRelatedTests",
    "test:watch": "yarn test --watchAll",
    "test:unit": "yarn test -c jest-unit-config.js",
    "test:integration": "yarn test -c jest-integration-config.js",
    "test:unit:watch": "yarn test --watchAll -c jest-unit-config.js",
    "test:integration:watch": "yarn test --watchAll -c jest-integration-config.js",
    "test:verbose": "jest --passWithNoTests --detectOpenHandles",
    "test:watch:verbose": "yarn test:verbose --watchAll",
    "test:unit:verbose": "yarn test:verbose -c jest-unit-config.js",
    "test:integration:verbose": "yarn test:verbose -c jest-integration-config.js",
    "test:unit:watch:verbose": "yarn test:verbose --watchAll -c jest-unit-config.js",
    "test:integration:watch:verbose": "yarn test:verbose --watchAll -c jest-integration-config.js"
  },
  "devDependencies": {
    "@commitlint/cli": "^17.6.0",
    "@commitlint/config-conventional": "^17.6.0",
    "@types/amqplib": "^0.10.1",
    "@types/bcryptjs": "^2.4.2",
    "@types/cors": "^2.8.13",
    "@types/express": "^4.17.17",
    "@types/jest": "^29.5.0",
    "@types/jsonwebtoken": "^9.0.1",
    "@types/node": "^18.15.11",
    "@types/supertest": "^2.0.12",
    "@types/swagger-ui-express": "^4.1.3",
    "@typescript-eslint/eslint-plugin": "^5.58.0",
    "@typescript-eslint/parser": "^5.58.0",
    "eslint": "^8.38.0",
    "husky": "^8.0.3",
    "jest": "^29.5.0",
    "lint-staged": "^13.2.1",
    "supertest": "^6.3.3",
    "ts-jest": "^29.1.0",
    "ts-node-dev": "^2.0.0",
    "tsc-alias": "^1.8.5",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.0.4"
  },
  "dependencies": {
    "@apollo/server": "^4.9.0",
    "@prisma/client": "4.8.1",
    "amqplib": "^0.10.3",
    "bcryptjs": "^2.4.3",
    "cors": "^2.8.5",
    "dotenv": "^16.0.3",
    "express": "^4.18.2",
    "graphql": "^16.7.1",
    "jsonwebtoken": "^9.0.0",
    "mongodb": "^5.2.0",
    "node-cache": "^5.1.2",
    "prisma": "4.8.1",
    "prom-client": "^15.0.0",
    "swagger-ui-express": "^4.6.2"
  }
}
